@model IEnumerable<QLST.Models.MarketEntities.UserInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách thông tin của người dùng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phonenum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Product.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phonenum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDUserInfo }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDUserInfo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDUserInfo })
        </td>
    </tr>
}

</table>
